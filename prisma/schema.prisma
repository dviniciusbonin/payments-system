generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum UserRole {
  PRODUCER
  AFFILIATE
  COPRODUCER
  PLATFORM
  CUSTOMER
}

enum FeeType {
  NATIONAL
  INTERNATIONAL
}

enum TransactionStatus {
  PENDING
  APPROVED
  REJECTED
}

model User {
  id           String   @id @default(uuid())
  name         String
  email        String   @unique
  passwordHash String   @map("password_hash")
  role         UserRole
  isActive     Boolean  @default(true) @map("is_active")
  createdAt    DateTime @default(now()) @map("created_at")
  updatedAt    DateTime @updatedAt @map("updated_at")

  balance           Balance?
  products          Product[]          @relation("ProducerProducts")
  transactions      Transaction[]      @relation("BuyerTransactions")
  transactionSplits TransactionSplit[]

  @@map("users")
}

model Product {
  id          String   @id @default(uuid())
  name        String
  description String?
  producerId  String   @map("producer_id")
  createdAt   DateTime @default(now()) @map("created_at")
  updatedAt   DateTime @updatedAt @map("updated_at")

  producer     User          @relation("ProducerProducts", fields: [producerId], references: [id], onDelete: Cascade)
  transactions Transaction[]
  commissions  Commission[]

  @@map("products")
}

model Balance {
  id        String   @id @default(uuid())
  userId    String   @unique @map("user_id")
  amount    Decimal  @db.Decimal(10, 2)
  updatedAt DateTime @updatedAt @map("updated_at")

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("balances")
}

model Fee {
  id            String   @id @default(uuid())
  countryCode   String   @map("country_code")
  feePercentage Decimal  @map("fee_percentage") @db.Decimal(5, 2)
  feeType       FeeType  @map("fee_type")
  isDefault     Boolean  @default(false) @map("is_default")
  createdAt     DateTime @default(now()) @map("created_at")
  updatedAt     DateTime @updatedAt @map("updated_at")

  @@unique([countryCode])
  @@map("fees")
}

model Commission {
  id         String   @id @default(uuid())
  role       UserRole
  percentage Decimal  @db.Decimal(5, 2)
  productId  String   @map("product_id")
  createdAt  DateTime @default(now()) @map("created_at")
  updatedAt  DateTime @updatedAt @map("updated_at")

  product Product @relation(fields: [productId], references: [id], onDelete: Cascade)

  @@unique([role, productId])
  @@map("commissions")
}

model Transaction {
  id          String            @id @default(uuid())
  amount      Decimal           @db.Decimal(10, 2)
  countryCode String            @map("country_code")
  status      TransactionStatus @default(APPROVED)
  feeAmount   Decimal           @map("fee_amount") @db.Decimal(10, 2)
  netAmount   Decimal           @map("net_amount") @db.Decimal(10, 2)
  buyerId     String            @map("buyer_id")
  productId   String            @map("product_id")
  createdAt   DateTime          @default(now()) @map("created_at")
  updatedAt   DateTime          @updatedAt @map("updated_at")

  buyer             User               @relation("BuyerTransactions", fields: [buyerId], references: [id])
  product           Product            @relation(fields: [productId], references: [id])
  transactionSplits TransactionSplit[]

  @@map("transactions")
}

model TransactionSplit {
  id            String   @id @default(uuid())
  transactionId String   @map("transaction_id")
  userId        String   @map("user_id")
  role          UserRole
  percentage    Decimal  @db.Decimal(5, 2)
  amount        Decimal  @db.Decimal(10, 2)
  createdAt     DateTime @default(now()) @map("created_at")

  transaction Transaction @relation(fields: [transactionId], references: [id], onDelete: Cascade)
  user        User        @relation(fields: [userId], references: [id])

  @@map("transaction_splits")
}
